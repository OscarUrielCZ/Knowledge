<form action="/nueva_sentencia" method="post">
  <div class="form-group">
    <label for="instruccion">Escribe la instrucción</label>
    <input id="minstruccion" class="form-control" type="text" name="instruccion">
  </div>
  <div class="form-group">
    <label for="descripcion">Descripción</label>
    <input class="form-control" type="text" name="descripcion">
  </div>
  <div class="form-group">
    <select class="custom-select" name="lenguaje">
      <option selected>Elige un lenguaje</option>
      <option value="js">JavaScript</option>
      <option value="py">Python</option>
      <option value="java">Java</option>
    </select>
  </div>
  <input class="btn btn-primary" type="submit" value="Registrar">
</form>
